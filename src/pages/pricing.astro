---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Básico",
    price: {
      monthly: "$127.99",
    },
    popular: false,
    features: [
      "5 Secciones de Páginas",
      "Diseño Básico",
      "Integraciones Básicas",
      "Soporte Estándar",
    ],
    button: {
      text: "Empezar",
      link: "https://calendly.com/mdog1525/nexgendigital-asesoria",
    },
  },
  {
    name: "Comercial",
    price: {
      monthly: "$347.99",
    },
    popular: true,
    features: [
      "10 páginas de Sitio Web",
      "Diseño avanzado",
      "Integración SEO",
      "Soporte Correo Electrónico",
    ],
    button: {
      text: "Empezar",
      link: "/contact",
    },
  },
  {
    name: "Personalizado",
    price: "A medida",
    popular: false,
    features: [
      "Sitio Web Completo",
      "Personalización Premium",
      "Seguridad SSL",
      "Soporte 24/7",
    ],
    button: {
      text: "Contáctanos",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Precios</Fragment>
      <Fragment slot="desc"> Accesibilidad y Transparencia </Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <p class="text-md leading-relaxed text-slate-500">
        Ofrecemos una variedad de planes diseñados para adaptarse a tus
        necesidades específicas, ya seas un emprendedor individual o una empresa
        en crecimiento.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
